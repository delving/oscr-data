<Book>
    <IdentificationNumber>{ "required": true, "unique": true, "fixed": true }</IdentificationNumber>
    <BookType>{ "vocabulary": "BookType" }</BookType>
    <Title>{ "required": true, "summaryField": "Title" }</Title>
    <Language>{ "vocabulary": "Language" }</Language>
    <Description>{ "paragraph":true }</Description>
    <ISBN/>
    <!--todo: find a solution for groupSpecific -->
    <BookCollection>{ "vocabulary": "BookCollection", "groupSpecific": true }</BookCollection>
    <Copyright>
        <CopyrightHolder>{ "instance": [ "Person", "Organization" ] }</CopyrightHolder>
        <CreativeCommonsLicense>{ "vocabulary": "CreativeCommonsLicense" }</CreativeCommonsLicense>
        <Note>{ "paragraph": true }</Note>
    </Copyright>
    <Subject>{ "multiple": true }
        <SubjectTag>{ "vocabulary": "BookSubjectTag", "multiple": true }</SubjectTag>
        <SubjectEntity>
            <Entity>{ "instance": [ "Person", "Organization", "Location", "Event" ] }</Entity>
            <Relation>{ "vocabulary": "BookReferenceToRelation" }</Relation>
        </SubjectEntity>
        <Note>{ "paragraph": true }</Note>
    </Subject>
    <PhysicalObject>
        <PhysicalDescription>
            <NumberOfPages>{ "validator":"count" }</NumberOfPages>
            <Condition>{ "vocabulary": "PhysicalBookCondition" }</Condition>
            <Note>{ "paragraph": true }</Note>
        </PhysicalDescription>
        <!--todo: find a solution for groupSpecific -->
        <StorageLocation>{ "vocabulary": "BookCollection", "groupSpecific": true }</StorageLocation>
    </PhysicalObject>
    <DigitalObject>{ "multiple": true }
        <File>{ "instance": "MediaMetadata }</File>
        <CreationDate>{ "validator": "date" }</CreationDate>
        <Note>{ "paragraph":true }</Note>
    </DigitalObject>
    <CreationEvent>
        <!--todo: what if the creation date is not known but is a date range?-->
        <CreationDate>{ "validator": "date" }</CreationDate>
        <Creator>{ "multiple : true" }
            <Type>{ "vocabulary": "BookCreationRole" }</Type>
            <Actor>{ "instance": [ "Person", "Organization" ] }</Actor>
        </Creator>
        <CreationPlace>{ "instance": "Location" }</CreationPlace>
    </CreationEvent>
    <PublicationEvent>
        <PublicationDateStart>{ "validator": "date" }</PublicationDateStart>
        <PublicationDateEnd>{ "validator": "date" }</PublicationDateEnd>
        <Publisher>{ "instance": [ "Organization", "Person" ] }</Publisher>
        <Note>{ "paragraph": true }</Note>
    </PublicationEvent>
    <IncludedIn>
        <Book>{ "instance": ["Book"] }</Book>
        <Relation>{ "vocabulary": "BookIncludedInRelation" }</Relation>
    </IncludedIn>
    <ComposedOf>{ "multiple": true }
        <Book>{ "instance": ["Book"] }</Book>
        <Relation>{ "vocabulary": "BookIncludedInRelation" }</Relation>
    </ComposedOf>
    <AcquisitionEvent>
        <AcquisitionType>{"vocabulary": "AcquisitionTypes"}</AcquisitionType>
        <AcquisitionSource>{ "instance": [ "Person", "Organization" ] }</AcquisitionSource>
        <AcquisitionDate>{"validator": "date"}</AcquisitionDate>
    </AcquisitionEvent>
</Book>