<?xml version="1.0"?>
<Schemas>

    <Vocabulary>
        <!--All vocabularies contain Identifier and Label as a basis-->
        <Place>{ "lookup": "geonames" }
            <URI/>
            <Latitude/>
            <Longitude/>
            <Notes>{ "paragraph":true }</Notes>
        </Place>
        <Actor>
            <FirstName>{ "multiple": true }</FirstName>
            <LastNamePrefix/>
            <LastName>{ "required": true }</LastName>
            <NickName></NickName>
            <Sex></Sex>        <!--TODO: add sex validator-->
            <Events>
                <MarriageEvent>{"multiple": true, "vocabulary": "MarriageEvent"}</MarriageEvent>
                <Birth>
                    <Date>{ "validator": "date" }</Date>
                    <Place>{ "vocabulary": "Place" }</Place>
                    <Father>{"vocabulary": "Actor"}</Father>
                    <Mother>{"vocabulary": "Actor"}</Mother>
                    <Notes>{ "paragraph":true }</Notes>
                </Birth>
                <Death>
                    <Date>{ "validator": "date" }</Date>
                    <Place>{ "vocabulary": "Place" }</Place>
                    <Notes>{ "paragraph":true }</Notes>
                </Death>
                <Funeral>
                    <DateOfFuneral>{ "validator": "date" }</DateOfFuneral>
                    <PlaceOfFuneral>{ "vocabulary": "Place" }</PlaceOfFuneral>
                    <Cemetary>{"vocabulary": "Cemetary"}</Cemetary>
                    <Notes>{ "paragraph":true }</Notes>
                </Funeral>
            </Events>
        </Actor>

        <Organisation>
            <Name></Name>
            <Events>
                <Start>
                    <Date>{ "validator": "date" }</Date>
                    <Place>{ "vocabulary": "Place" }</Place>
                </Start>
                <End>
                    <Date>{ "validator": "date" }</Date>
                    <Place>{ "vocabulary": "Place" }</Place>
                </End>
            </Events>
            <Notes>{ "paragraph":true }</Notes>
        </Organisation>

        <Cemetary>
            <Name/>
            <Place>{"vocabulary": "Place"}</Place>
            <Notes>{ "paragraph":true }</Notes>
        </Cemetary>

        <MarriageEvent>
            <Husband>{"vocabulary": "Actor"}</Husband>
            <Wife>{"vocabulary": "Actor"}</Wife>
            <StartDate>{ "validator": "date" }</StartDate>
            <EndDate>{ "validator": "date" }</EndDate>
            <MarriagePlace>{"vocabulary": "place"}</MarriagePlace>
            <Notes>{ "paragraph":true }</Notes>
        </MarriageEvent>


        <Event>
            <Date>{ "validator": "date" }</Date>
            <Place>{ "vocabulary": "Place" }</Place>
        </Event>

        <Rights/>
        <GeonamesFeatureCodes>
            <Description/>
        </GeonamesFeatureCodes>
        <Publisher/>

        <PhotoType/>
        <PhotoAssistRole/>

        <VideoGenre/>
        <VideoAssistRole/>
        <VideoBitRate/>
        <VideoEncoding/>
        <VideoPhysicalType/>
        <VideoCondition/>

        <BookGenre/>
        <BookAssistRole/>

        <PhotoISO/>
        <PhotoExposure/>
        <PhotoAperture/>
        <PhotoFocalLength/>
        <PhotoColorDepth/>
        <PhotoPhysicalType/>
        <PhotoCondition/>

        <StorageLocation>
            <Place>{ "vocabulary": "Place" }</Place>
            <Notes>{ "paragraph":true }</Notes>
        </StorageLocation>

        <MediaCollection/>

    </Vocabulary>

    <Document>

        <Photo>
            <Title>{ "required": true, "summaryField": "Title" }</Title>
            <Type>{ "vocabulary": "PhotoType" }</Type>
            <Rights>{ "vocabulary": "Rights" }</Rights>
            <MediaFile>{ "multiple":true, "media": "MediaMetadata" }</MediaFile>
            <PhotoCreation>
                <CreationDate>{ "validator": "date" }</CreationDate>
                <PhotoLocation>{ "vocabulary": "Place" }</PhotoLocation>
                <Photographer>{ "required": true, "vocabulary": "Actor", "multiple":true }</Photographer>
                <PhotoAssistant>{ "multiple":true }
                    <PhotoAssistRole>{ "required": true, "vocabulary": "PhotoAssistRole" }</PhotoAssistRole>
                    <Assistant>{ "required": true, "vocabulary": "Actor" }</Assistant>
                </PhotoAssistant>
                <Notes>{ "paragraph":true }</Notes>
            </PhotoCreation>
            <DepictedInPhoto>{ "multiple":true }
                <Person>{ "vocabulary": "Actor" }</Person>
                <Place>{ "vocabulary": "Place" }</Place>
                <Event>{ "vocabulary": "Event" }</Event>
                <Notes>{ "paragraph":true }</Notes>
            </DepictedInPhoto>
            <Published>
                <PublishDate>{ "validator": "date" }</PublishDate>
                <Publisher>{ "vocabulary": "Publisher" }</Publisher>
                <Notes>{ "paragraph":true }</Notes>
            </Published>
            <PhotoTechnical>
                <Dimensions>{ "validator": "pixels" }</Dimensions>
                <CameraSettings>
                    <ISORating>{ "vocabulary": "PhotoISO" }</ISORating>
                    <ExposureTime>{ "vocabulary": "PhotoExposure" }</ExposureTime>
                    <LensAperture>{ "vocabulary": "PhotoAperture" }</LensAperture>
                    <FocalLength>{ "vocabulary": "PhotoFocalLength" }</FocalLength>
                </CameraSettings>
                <Digitization>
                    <DPIResolution>{ "validator": "DPI" }</DPIResolution>
                    <ColorDepth>{ "vocabulary": "PhotoColorDepth" }</ColorDepth>
                </Digitization>
                <Notes>{ "paragraph":true }</Notes>
            </PhotoTechnical>
            <PhotoPhysical>
                <PhotoPhysicalType>{ "vocabulary": "PhotoPhysicalType" }</PhotoPhysicalType>
                <StorageLocation>{ "vocabulary": "StorageLocation" }</StorageLocation>
                <PhotoCondition>{ "vocabulary": "PhotoCondition" }</PhotoCondition>
                <Notes>{ "paragraph":true }</Notes>
            </PhotoPhysical>
        </Photo>

        <Video>
            <Title>{ "required":true, "summaryField": "Title"  }</Title>
            <MediaFile>{ "media": "MediaMetadata" }</MediaFile>
            <Genre>{ "vocabulary": "VideoGenre" }</Genre>
            <Rights>{ "vocabulary": "Rights" }</Rights>
            <VideoCreation>
                <CreationDate>{ "validator": "date" }</CreationDate>
                <VideoLocation>{ "vocabulary": "Place", "multiple":true }</VideoLocation>
                <Director>{ "muliple":true, "required": true, "vocabulary": "Actor", "multiple":true }</Director>
                <VideoAssistant>{ "multiple":true }
                    <VideoAssistRole>{ "vocabulary": "VideoAssistRole" }</VideoAssistRole>
                    <Assistant>{ "required": true, "vocabulary": "Actor", "multiple":true }</Assistant>
                </VideoAssistant>
                <Notes>{ "paragraph":true }</Notes>
            </VideoCreation>
            <DepictedInVideo>{ "multiple":true }
                <Person>{ "vocabulary": "Actor" }</Person>
                <Place>{ "vocabulary": "Place" }</Place>
                <Event>{ "vocabulary": "Event" }</Event>
                <Notes>{ "paragraph":true }</Notes>
            </DepictedInVideo>
            <Published>{ "multiple": true }
                <PublishDate>{ "validator": "date" }</PublishDate>
                <Publisher>{ "vocabulary": "Publisher" }</Publisher>
                <Notes>{ "paragraph":true }</Notes>
            </Published>
            <VideoTechnical>
                <Bitrate>{ "vocabulary": "VideoBitRate" }</Bitrate>
                <Dimension>{ "validator": "pixels" }</Dimension>
                <Duration>{ "validator": "time" }</Duration>
                <EncodingFormat>{ "vocabulary": "VideoEncoding" }</EncodingFormat>
                <Notes>{ "paragraph":true }</Notes>
            </VideoTechnical>
            <VideoPhysical>
                <VideoPhysicalType>{ "vocabulary": "VideoPhysicalType" }</VideoPhysicalType>
                <StorageLocation>{ "vocabulary": "StorageLocation" }</StorageLocation>
                <VideoCondition>{ "vocabulary": "VideoCondition" }</VideoCondition>
                <Notes>{ "paragraph":true }</Notes>
            </VideoPhysical>
        </Video>

        <InMemoriam>
            <Person>{"vocabulary": "Actor"}</Person>
            <MemoriamText>{ "paragraph":true }</MemoriamText>
            <Notes>{ "paragraph":true }</Notes>
            <PropertyOf></PropertyOf> <!--Eigendom/Bruikleen (via een vinkjesveld, beide moeten tegelijk aangezet kunnen worden)-->
            <Original></Original> <!--Orgineel/Kopie (Bolletjesveld)-->
            <PhysicalStorageLocation></PhysicalStorageLocation> <!--Waar is het bidprentje opgeslagen (kast 1 lade 5, alleen digitaal beschikbaar, dat soort informatie)-->
            <Image> {"multiple": true}
                <Recto>
                    <MediaFile>{ "media": "MediaMetadata" }</MediaFile>
                    <Notes>{ "paragraph":true }</Notes>
                </Recto>
                <Verso>
                    <MediaFile>{ "media": "MediaMetadata" }</MediaFile>
                    <Notes>{ "paragraph":true }</Notes>
                </Verso>
            </Image>
        </InMemoriam>

        <Book>
            <Title>{ "required": true, "summaryField": "Title" }</Title>
            <Subtitle/>
            <BookGenre>{ "required":true, "vocabulary": "BookType" }</BookGenre>
            <ISBN>{ "validator": "ISBN" }</ISBN>
            <BookCreation>
                <Author>{ "required": true, "vocabulary": "Actor", "multiple":true }</Author>
                <PhotoAssistant>{ "multiple":true }
                    <BookAssistRole>{ "required": true, "vocabulary": "BookAssistRole" }</BookAssistRole>
                    <Assistant>{ "required": true, "vocabulary": "Actor", "multiple":true }</Assistant>
                </PhotoAssistant>
                <Notes>{ "paragraph":true }</Notes>
            </BookCreation>
            <DepictedInBook>{ "multiple":true }
                <Person>{ "vocabulary": "Actor" }</Person>
                <Place>{ "vocabulary": "Place" }</Place>
                <Event>{ "vocabulary": "Event" }</Event>
                <Notes>{ "paragraph":true }</Notes>
            </DepictedInBook>
            <Published>{ "multiple": true }
                <PublishDate>{ "validator": "date" }</PublishDate>
                <Publisher>{ "vocabulary": "BookPublisher" }</Publisher>
                <Notes>{ "paragraph":true }</Notes>
            </Published>
            <BookPhysical>
                <StorageLocation>{ "vocabulary": "StorageLocation" }</StorageLocation>
                <PublicationCondition>{ "vocabulary": "PublicationCondition" }</PublicationCondition>
                <Notes>{ "paragraph":true }</Notes>
            </BookPhysical>
            <MediaFile>{ "media": "MediaMetadata" }</MediaFile>
        </Book>

        <MediaMetadata>
            <UserIdentifier/>
            <GroupIdentifier/>
            <FileName/>
            <OriginalFileName/>
            <MimeType/>
        </MediaMetadata>

        <!--FORTH schema-->

        <!-- Location see location.pdf and locations.xsd-->
        <Location>
            <!--Identification number(URI) [e.g Location#1]-->
            <IdentificationNumber/>
            <!--Attribution date (time primitive) [2004]-->
            <IdentificationNumberAttributionDate>{ "validator": "date" }</IdentificationNumberAttributionDate>
            <!--Name (cv ) [eg Istanbul]-->
            <Name>{ "vocabulary": "Place"}</Name>
            <!--Type(+) (cv ) [eg city]-->
            <Type>{ "vocabulary": "GeonamesFeatureCodes" }</Type>
            <!--Geopolitical Coordinates (cv ) [Asia, Turkey, Marmara, Istanbul]-->
            <GeopoliticalHierarchy/>
            <CodeNumber> { "multiple":true } <!--Location Code Number [ it is completed in case a location is registered by a geographic thesaurus or other authority that provides an id in addition to a place name]-->
                <!--Value (string) [7002473]-->
                <Value/>
                <!--Category (+) (cv) [TGN Getty ID]  -->
                <Category/>
                <!--Attribution date (time primitive) [2004]-->
                <AttributionDate>{ "validator": "date" }</AttributionDate>
                <!--Expiry date (time primitive)-->
                <ExpiryDate>{ "validator": "date" }</ExpiryDate>
                <!--Code number attributed by-->
                <AttributedBy>{ }</AttributedBy>
            </CodeNumber>
            <!--link to organization id, organization name(afe), [e.g organization#44, Getty Research Institute]  NOT IN XSD -->
            <OrganisationId>{ }</OrganisationId>
            <!--link to person id, person name(afe), NOT IN XSD-->
            <PersonId>{ }</PersonId>
        </Location>









    </Document>

</Schemas>

