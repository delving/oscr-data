<Person>
    <!-- FORTH Person.xsd -->
    <!--OSCR mark up not proofed-->

    <IdentificationNumber oscr_fixed="">{"type": "string"}</IdentificationNumber>
    <Appellation>{"type": "string"}</Appellation>
    <Name>{"type": "term", "multiple":false, "vocabulary": "Place"}</Name>
    <Type oscr_id="" oscr_vocabulary="">{"vocabulary": "PersonType"}</Type>
    <Period>
        <BirthDate>{"validator": "date"}</BirthDate>
        <DeathDate>{"validator": "date"}</DeathDate>
    </Period>
    <Birth-Death_Note>{"validator": "date"}</Birth-Death_Note>
    <BeMemberOf oscr_id="" oscr_type="">{ "lookup": "?" }</BeMemberOf>
    <Residence>
        <Type oscr_id="" oscr_vocabulary="">{"vocabulary": "XXXXXXX"}</Type>
        <Location>
            <!--<GeopoliticalHierarchy oscr_id="" oscr_vocabulary="">{ "lookup": [ "place" ] }</GeopoliticalHierarchy>-->
            <Link oscr_id="" oscr_type=""/>
        </Location>
        <ContactInfo>
            <Location>
                <GeopoliticalHierarchy oscr_id="" oscr_vocabulary="">{ "lookup": [ "place" ] }</GeopoliticalHierarchy>
                <Link oscr_id="" oscr_type=""/>
            </Location>
            <Address/>
            <Telephone/>
            <Fax/>
            <Email/>
        </ContactInfo>
    </Residence>
    <Description>{ "paragraph": true }</Description>
    <RelatedToPerson oscr_id="" oscr_type="">{"vocabulary": "PersonRelationType"}</RelatedToPerson>

    <!--todo: the following is from work related to Memoriam-->
    <FirstName>{ "multiple": true }</FirstName>
    <LastNamePrefix/>
    <LastName>{ "required": true }</LastName>
    <NickName></NickName>
    <Sex></Sex>        <!--TODO: add sex validator-->
    <Events>
        <MarriageEvent>{"multiple": true, "vocabulary": "MarriageEvent"}</MarriageEvent>
        <Birth>
            <Date>{ "validator": "date" }</Date>
            <Place>{ "vocabulary": "Place" }</Place>
            <Father>{"vocabulary": "Actor"}</Father>
            <Mother>{"vocabulary": "Actor"}</Mother>
            <Notes>{ "paragraph":true }</Notes>
        </Birth>
        <Death>
            <Date>{ "validator": "date" }</Date>
            <Place>{ "vocabulary": "Place" }</Place>
            <Notes>{ "paragraph":true }</Notes>
        </Death>
        <Funeral>
            <DateOfFuneral>{ "validator": "date" }</DateOfFuneral>
            <PlaceOfFuneral>{ "vocabulary": "Place" }</PlaceOfFuneral>
            <Cemetary>{"vocabulary": "Cemetary"}</Cemetary>
            <Notes>{ "paragraph":true }</Notes>
        </Funeral>
    </Events>

</Person>