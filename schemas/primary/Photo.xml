
<!--a photograph record-->

<Photo>

    <!--what type of photo is this?  a negative, a print?  later these can be associated with authority terms-->
    <Type>{ "vocabulary": "PhotoType" }</Type>

    <!--what is the title of this photo?  this is used for list display-->
    <Title>{ "required": true, "summaryField": "Title" }</Title>

    <Comment>{ "paragraph":true }</Comment>

    <PhotoCollection>{ "vocabulary": "PhotoCollection" }</PhotoCollection>

    <Copyright>
        <CopyrightHolder>{ "instance": [ "Person", "Organization" ] }</CopyrightHolder>
        <CreativeCommonsLicense>{ "vocabulary": "CreativeCommonsLicense" }</CreativeCommonsLicense>
        <Note>{ "paragraph": true }</Note>
    </Copyright>
    
    <RefersTo>{ "multiple": true }
        <SubjectTag>{ "vocabulary": "SubjectTag", "multiple": true }</SubjectTag>
        <SubjectEntity>
            <Entity>{ "instance": [ "Person", "Organization", "Location", "Event" ] }</Entity>
            <Relation>{ "vocabulary": "ReferenceToRelation" }</Relation>
        </SubjectEntity>
        <Note>{ "paragraph": true }</Note>
    </RefersTo>
    <PhysicalObject>
        <PhysicalDescription>
            <Condition>{ "vocabulary": "PhysicalPhotoCondition" }</Condition>
            <HeightCM>{ "validator": "float" }</HeightCM>
            <WidthCM>{ "validator": "float" }</WidthCM>
            <Technique>{ "vocabulary": "PhysicalPhotoTechnique" }</Technique>
            <Material>{ "vocabulary": "PhysicalPhotoMaterial" }</Material>
        </PhysicalDescription>
        <!--todo: find a solution for groupSpecific -->
        <StorageLocation>{ "vocabulary": PhotoStorageLocation, "groupSpecific": true }</StorageLocation>
    </PhysicalObject>
    <DigitalObject>{ "multiple": true }
        <File>{ "instance": "MediaMetadata }</File>
        <CreationDate>{ "validator": "date" }</CreationDate>
        <TechnicalDescription>
            <PixelsX>{ "validator": "count" }</PixelsX>
            <PixelsY>{ "validator": "count" }</PixelsY>
            <ResolutionPPI>{ "validator": "count" }</ResolutionPPI>
            <ColorDepthBits>{ "validator": "count" }</ColorDepthBits>
            <ColorModel>{ "??": "??" }</ColorModel>
            <ExifData>{ "paragraph": true }</ExifData>
        </TechnicalDescription>
        <Note>{ "paragraph":true }</Note>
    </DigitalObject>
    <CreationEvent>
        <!--ask: what if the creation date is not known but is a date range?-->
        <CreationDate>{ "validator": "date" }</CreationDate>
        <CreatorInRole>{ "multiple : true" }
            <Role>{ "vocabulary": "PhotoCreationRole" }</Role>
            <Creator>{ "instance": [ "Person", "Organization" ] }</Creator>
        </CreatorInRole>
        <CreationPlace>{ "instance": "Location" }</CreationPlace>
    </CreationEvent>
    <AcquisitionEvent>
        <AcquisitionType>{ "vocabulary": "AcquisitionTypes" }</AcquisitionType>
        <AcquisitionSource>{ "instance": [ "Person", "Organization" ] }</AcquisitionSource>
        <AcquisitionDate>{ "validator": "date" }</AcquisitionDate>
    </AcquisitionEvent>
    <PublicationEvent>
        <PublicationDate>{ "validator": "date" }</PublicationDate>
        <Publisher>{ "instance": [ "Person", "Organization" ] }</Publisher>
        <Note>{ "paragraph":true }</Note>
    </PublicationEvent>
    <ExhibitionEventNote>{ "multiple": true }</ExhibitionEventNote>
</Photo>