<Film>
    <IdentificationNumber>{ "required": true, "unique": true, "fixed": true }</IdentificationNumber>
    <Type>{ "vocabulary": "PhysicalFilmTypes" }</Type>
    <Title>{ "required": true, "summaryField": "Title" }</Title>
    <Description>{ "paragraph":true }</Description>
    <!--todo: find a solution for groupSpecific -->
    <Collection>{ "vocabulary": "FilmCollection", "groupSpecific": true }</Collection>
    <Copyright>
        <CopyrightHolder>{ "instance": [ "Person", "Organization" ] }</CopyrightHolder>
        <CreativeCommonsLicense>{ "vocabulary": "CreativeCommonsLicense" }</CreativeCommonsLicense>
        <Comment>{ "paragraph": true }</Comment>
    </Copyright>
    <!--todo: this is the right form of refers to for all-->
    <RefersTo>{ "multiple": true }
        <Entity>{ "instance": [ "Person", "Organization", "Location", "Event" ] }</Entity>
        <Relation>{ "vocabulary": "RefersToRelation" }</Relation>
        <Comment>{ "paragraph":true }</Comment>
    </RefersTo>
    <DigitalObject>{ "multiple": true }
        <Relation>{ "vocabulary": "FilmDigitalObjectRelation" }</Relation>
        <File>{ "instance": "MediaMetadata" }</File>
        <CreationDate>{ "validator": "date" }</CreationDate>
        <TechnicalProperty>{ "multiple": true }
            <Type>{ "vocabulary": "FilmTechnicalPropertyType" }</Type>
            <Value/>
            <Unit>{ "vocabulary": "FilmTechnicalPropertyUnit" }</Unit>
            <Method>{ "vocabulary": "FilmTechnicalPropertyMethod" }</Method>
        </TechnicalProperty>
        <Comment>{ "paragraph":true }</Comment>
    </DigitalObject>
    <CreationEvent>
        <!--todo: what if the creation date is not known but is a date range?-->
        <CreationDate>{ "validator": "date" }</CreationDate>
        <Creator>{ "multiple : true" }
            <Type>{ "vocabulary": "FilmCreationRole" }</Type>
            <Actor>{ "instance": [ "Person", "Organization" ] }</Actor>
        </Creator>
        <CreationPlace>{ "instance": "Location" }</CreationPlace>
        <PhysicalDescription>
            <Format>{ "vocabulary": "PhysicalFilmFormats" }</Format>
            <Material>{ "vocabulary": "PhysicalFilmMaterials"</Material>
            <Duration>
                <Hours>{ "validator": "count" }</Hours>
                <Minutes>{ "validator": "count" }</Minutes>
                <Seconds>{ "validator": "count" }</Seconds>
            </Duration>
            <!--todo: find a solution for groupSpecific -->
            <StorageLocation>{ "vocabulary": FilmStorageLocation, "groupSpecific": true }</StorageLocation>
        </PhysicalDescription>
    </CreationEvent>
    <AcquisitionEvent>
        <Condition>{ "vocabulary": "PhysicalFilmCondition" }</Condition>
        <AcquisitionType>{"vocabulary": "AcquisitionTypes"}</AcquisitionType>
        <AcquisitionSource>{ "instance": [ "Person", "Organization" ] }</AcquisitionSource>
        <AcquisitionDate>{"validator": "date"}</AcquisitionDate>
        <Comment>{ "paragraph": true }</Comment>
    </AcquisitionEvent>
    <PublicationEvent>{ "multiple": true }
        <PublicationDate>{ "validator": "date" }</PublicationDate>
        <Publisher>{ "instance": [ "Person", "Organization" ] }</Publisher>
        <PublicationPlace>{ "instance": "Location" }</PublicationPlace>
        <Comment>{ "paragraph": true }</Comment>
    </PublicationEvent>
</Film>
