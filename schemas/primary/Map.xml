    <PhysicalObject>
        <Condition>{ "vocabulary": "PhysicalMapCondition" }</Condition>
        <Edition/>
        <!--todo: printed or manuscript?-->
        <Material/>
        <!--todo: physical or technical?-->
        <Characteristics/>
        <!--todo: what units?-->
        <Size/>
        <!--todo: unclear-->
        <Scope/>
