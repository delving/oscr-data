<Memoriam>
    <IdentificationNumber>{ "required": true, "unique": true, "fixed": true }</IdentificationNumber>

    <!--todo: what name is this to represent?-->
    <Appellation>{"type": "string"}</Appellation>

    <!--todo: what are the types?-->
    <Type>{"vocabulary": "InMemoriamType"}</Type>

    <!--todo: date of publication or what?-->
    <Date>{"validator": "date"}</Date>

    <Description>{ "paragraph":true }</Description>

    <StorageLocation>
        <Type oscr_id="" oscr_vocabulary="">{ "vocabulary": "MemoriamStorageLocationType" }</Type>
        <Name/>
        <Description>{ "paragraph":true }</Description>
    </StorageLocation>

    <Front>
        <FrontScan>{ "instance": "MediaMetadata"</FrontScan>
        <Note>{ "paragraph":true }</Note>
    </Front>
    <Back>
        <BackScan>{ "instance": "MediaMetadata"</BackScan>
        <Note>{ "paragraph":true }</Note>
    </Back>

    <!--???? below-->
    <PropertyOf/>
    <!--Eigendom/Bruikleen (via een vinkjesveld, beide moeten tegelijk aangezet kunnen worden)-->
    <Original/>
    <!--Orgineel/Kopie (Bolletjesveld)-->

    <!--todo: the following things may play a role-->
    <FirstName>{ "multiple": true }</FirstName>
    <LastNamePrefix/>
    <LastName>{ "required": true }</LastName>
    <NickName></NickName>
    <Sex></Sex>        <!--TODO: add sex validator-->
    <Events>
        <MarriageEvent>{"multiple": true, "vocabulary": "MarriageEvent"}</MarriageEvent>
        <Birth>
            <Date>{ "validator": "date" }</Date>
            <Place>{ "vocabulary": "Place" }</Place>
            <Father>{"vocabulary": "Actor"}</Father>
            <Mother>{"vocabulary": "Actor"}</Mother>
            <Notes>{ "paragraph":true }</Notes>
        </Birth>
        <Death>
            <Date>{ "validator": "date" }</Date>
            <Place>{ "vocabulary": "Place" }</Place>
            <Notes>{ "paragraph":true }</Notes>
        </Death>
        <Funeral>
            <DateOfFuneral>{ "validator": "date" }</DateOfFuneral>
            <PlaceOfFuneral>{ "vocabulary": "Place" }</PlaceOfFuneral>
            <Cemetary>{"vocabulary": "Cemetary"}</Cemetary>
            <Notes>{ "paragraph":true }</Notes>
        </Funeral>
    </Events>

</Memoriam>
